<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ModernCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:contentPadding="20dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Дата дня -->
            <TextView
                android:id="@+id/dayDateTextView"
                style="@style/TextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="Monday, 15 January" />

            <TextView
                android:id="@+id/notesPreviewTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadeScrollbars="false"
                android:lineSpacingExtra="4dp"
                android:maxLines="6"
                android:scrollbars="vertical"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                tools:text="• Заметка 1\n• Заметка 2\n• Заметка 3" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:padding="1dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressIndicator"
                style="@style/Widget.Material3.CircularProgressIndicator"
                android:layout_width="123dp"
                android:layout_height="118dp"
                app:hideAnimationBehavior="none"
                app:indicatorColor="@color/primary"
                app:indicatorDirectionCircular="clockwise"
                app:indicatorInset="8dp"
                app:indicatorSize="70dp"
                app:showAnimationBehavior="none"
                app:trackColor="@color/medium_gray"
                app:trackThickness="8dp" />

            <TextView
                android:id="@+id/progressPercentText"
                android:layout_width="86dp"
                android:layout_height="87dp"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                tools:text="75%" />
        </FrameLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>