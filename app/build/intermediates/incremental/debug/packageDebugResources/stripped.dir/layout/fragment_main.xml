<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".MainFragment">

    <!-- Информационный блок -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCard"
        style="@style/InfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Верхняя строка с логотипом и меню -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarDefaultDelayBeforeFade="200">

                <!-- Логотип Tasker (слева) -->
                <ImageView
                    android:id="@+id/taskoraLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Tasker Logo"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/tasker"
                    android:soundEffectsEnabled="false" />

                <!-- Кнопка меню (справа) -->
                <ImageButton
                    android:id="@+id/menuButton"
                    style="@style/MenuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.8"
                    android:background="@null"
                    android:soundEffectsEnabled="false"
                    android:contentDescription="Меню"
                    android:src="@drawable/ic_more_vertical"
                    android:tint="@color/text_secondary" />

            </RelativeLayout>

            <!-- Информационный текст -->
            <TextView
                android:id="@+id/infoTitleTextView"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:textStyle="normal"
                tools:text="Сегодня" />

            <TextView
                android:id="@+id/infoMessageTextView"
                style="@style/TextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:textStyle="bold"
                tools:text="Отлично, ты молодец. Все дела сделаны." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    

    <!-- Разделительная линия -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/primary_light"
        android:alpha="0.3"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/infoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Блок с днями недели -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daysRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:clipToPadding="false"
        android:minHeight="200dp"
        android:overScrollMode="never"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        tools:listitem="@layout/item_day" />

</androidx.constraintlayout.widget.ConstraintLayout> 