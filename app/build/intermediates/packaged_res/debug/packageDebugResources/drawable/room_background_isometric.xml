<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Тень комнаты -->
    <item android:top="8dp" android:left="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000020" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Пол комнаты (ромбовидная форма) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5DC" />
            <stroke android:width="3dp" android:color="#8B4513" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Левая стена (тень) -->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D2B48C" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Правая стена (свет) -->
    <item android:right="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5DEB3" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
</layer-list>
