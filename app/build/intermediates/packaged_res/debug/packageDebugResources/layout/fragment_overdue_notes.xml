<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Информационный блок -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCard"
        style="@style/InfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Верхняя строка с логотипом и меню -->

            <!-- Информационный текст -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="34dp">

                <!-- Логотип Tasker (слева) -->

                <!-- Кнопка меню (справа) -->
                <ImageView
                    android:id="@+id/taskoraLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Tasker Logo"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/tasker" />

                <ImageButton
                    android:id="@+id/menuButton"
                    style="@style/MenuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:alpha="0.8"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Меню"
                    android:src="@drawable/ic_more_vertical"
                    android:tint="@color/text_secondary" />

            </RelativeLayout>

            <TextView
                android:id="@+id/infoTitleTextView"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:textStyle="normal"
                tools:text="Overdue Tasks" />

            <TextView
                android:id="@+id/infoMessageTextView"
                style="@style/TextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:textStyle="bold"
                tools:text="You have 5 overdue tasks" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- RecyclerView для просроченных заметок -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/overdueNotesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/infoCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Пустое состояние -->
    <TextView
        android:id="@+id/emptyStateTextView"
        style="@style/TextSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:text="No overdue tasks"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 