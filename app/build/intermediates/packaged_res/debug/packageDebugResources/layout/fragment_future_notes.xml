<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".FutureNotesFragment">

    <!-- Информационный блок -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCard"
        style="@style/InfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Верхняя строка с логотипом и меню -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <!-- Логотип Tasker (слева) -->
                <ImageView
                    android:id="@+id/taskoraLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Tasker Logo"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/tasker"
                    android:soundEffectsEnabled="false" />

                <!-- Кнопка меню (справа) -->
                <ImageButton
                    android:id="@+id/menuButton"
                    style="@style/MenuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.8"
                    android:background="@null"
                    android:soundEffectsEnabled="false"
                    android:contentDescription="Меню"
                    android:src="@drawable/ic_more_vertical"
                    android:tint="@color/text_secondary" />

            </RelativeLayout>

            <!-- Информационный текст -->
            <TextView
                android:id="@+id/titleTextView"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="@string/future_tasks"
                android:textStyle="normal"
                tools:text="Future Tasks" />

            <TextView
                android:id="@+id/infoMessageTextView"
                style="@style/TextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:textStyle="bold"
                tools:text="Here will be your future tasks" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Блок с заметками -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/infoCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_note" />

    <!-- Кнопка добавления заметки -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNoteButton"
        style="@style/ModernFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 